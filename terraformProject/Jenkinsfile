pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'Terraform action to perform'
        )
    }

    environment {
        AWS_DEFAULT_REGION = "ap-south-1"

        // VERY IMPORTANT for CI/CD
        AWS_SDK_LOAD_CONFIG = "0"
        AWS_PROFILE = ""

        // Terraform root directory
        TF_DIR = "terraformProject/main"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/durveshyadav3604/cloud-devops-project.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Terraform Init') {
            steps {
                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        credentialsId: 'aws-terraform-creds'
                    ]
                ]) {
                    dir("${TF_DIR}") {
                        sh '''
                            terraform version
                            terraform init -reconfigure
                        '''
                    }
                }
            }
        }

        stage('Terraform Plan') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        credentialsId: 'aws-terraform-creds'
                    ]
                ]) {
                    dir("${TF_DIR}") {
                        sh '''
                            terraform plan -out=tfplan
                        '''
                    }
                }
            }
        }

        stage('Terraform Apply or Destroy') {
            steps {
                input message: "Are you sure you want to ${params.ACTION} Terraform resources?"

                withCredentials([
                    [
                        $class: 'AmazonWebServicesCredentialsBinding',
                        credentialsId: 'aws-terraform-creds'
                    ]
                ]) {
                    dir("${TF_DIR}") {
                        sh '''
                            if [ "${ACTION}" = "apply" ]; then
                                terraform apply -auto-approve tfplan
                            else
                                terraform destroy -auto-approve
                            fi
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Terraform ${params.ACTION} completed successfully "
        }
        failure {
            echo "Terraform ${params.ACTION} failed "
        }
    }
}

