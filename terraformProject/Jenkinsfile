pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'Terraform action'
        )
    }

    environment {
        AWS_REGION         = "ap-south-1"
        AWS_DEFAULT_REGION = "ap-south-1"
        TF_DIR             = "terraformProject/main"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/durveshyadav3604/cloud-devops-project.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Terraform Init') {
            steps {
                withCredentials([[ 
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-terraform-creds'
                ]]) {
                    dir("${TF_DIR}") {
                        sh '''
                          echo "üîê Verifying AWS identity..."
                          aws sts get-caller-identity

                          echo "üöÄ Initializing Terraform..."
                          rm -rf .terraform
                          terraform init -reconfigure
                        '''
                    }
                }
            }
        }

        stage('Terraform Plan') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                withCredentials([[ 
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-terraform-creds'
                ]]) {
                    dir("${TF_DIR}") {
                        sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply / Destroy') {
            steps {
                input message: "Confirm Terraform ${params.ACTION}?"

                withCredentials([[ 
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-terraform-creds'
                ]]) {
                    dir("${TF_DIR}") {
                        script {
                            if (params.ACTION == 'apply') {
                                parallel(
                                    "Networking": {
                                        sh 'terraform apply -auto-approve -parallelism=20 -target=module.vpc -target=module.natgateway -target=module.security_group'
                                    },
                                    "Compute": {
                                        sh 'terraform apply -auto-approve -parallelism=20 -target=module.ec2 -target=module.asg -target=module.bastion'
                                    },
                                    "Database": {
                                        sh 'terraform apply -auto-approve -parallelism=20 -target=module.rds'
                                    },
                                    "Kubernetes": {
                                        sh 'terraform apply -auto-approve -parallelism=20 -target=module.eks -target=module.eks_node_group'
                                    },
                                    "LB & Monitoring": {
                                        sh 'terraform apply -auto-approve -parallelism=20 -target=module.alb -target=module.monitoring'
                                    }
                                ) // <-- closes parallel
                            } else {
                                sh 'terraform destroy -auto-approve'
                            }
                        } // <-- closes script
                    }
                }
            }
        }
    }

    post {
        success {
            echo " Terraform ${params.ACTION} completed successfully"
        }
        failure {
            echo " Terraform ${params.ACTION} failed"
        }
    }
} // <-- closes pipeline


